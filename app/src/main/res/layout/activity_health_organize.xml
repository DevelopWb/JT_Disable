<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/health_org_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="机构名称"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/health_org_des_tv"
                style="@style/item_title_style"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"></TextView>

            <ImageView
                android:id="@+id/health_org_img_iv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"></ImageView>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/health_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="地址:"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>


                <TextView
                    android:id="@+id/health_addr_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:editable="false"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/gray_deeper"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/health_name_tv"
                    app:layout_constraintLeft_toRightOf="@+id/health_name_tv"
                    app:layout_constraintRight_toLeftOf="@+id/navigation_iv"
                    app:layout_constraintTop_toTopOf="@+id/health_name_tv"></TextView>

                <ImageView
                    android:id="@+id/navigation_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/navigation_icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>


                <TextView
                    android:id="@+id/health_tel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="电话:"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/health_name_tv"></TextView>


                <TextView
                    android:id="@+id/health_tel_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_white_only_bottom_blue_shape_1px"
                    android:lines="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/health_tel_tv"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toRightOf="@+id/health_tel_tv"
                    app:layout_constraintTop_toTopOf="@+id/health_tel_tv"></TextView>

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
