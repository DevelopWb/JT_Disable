<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/item_comment_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/my_hint_head"/>
    <LinearLayout
        android:id="@+id/item_comment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_comment_user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15dp"
            android:text="名字"
            android:textColor="@color/colorAccent" />
        <ImageView
            android:id="@+id/item_comment_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/info_like_bg_selector"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/item_comment_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLength="5"
            android:minWidth="30dp"
            android:text="赞"
            android:textSize="12dp"
            android:textColor="@color/text_content"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:layout_below="@+id/item_comment_top"/>

    <TextView
        android:id="@+id/item_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="11dp"
        android:text="2020-02-23  10:52"
        android:textColor="@color/text_content"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:layout_below="@+id/item_comment_content"/>

    <TextView
        android:id="@+id/item_comment_huifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="11dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_comment_time"
        android:layout_below="@+id/item_comment_content"
        android:text="回复ta"/>

    <TextView
        android:id="@+id/item_comment_child1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textSize="13dp"
        android:text="子评论1"
        android:textColor="@color/text_content"
        android:visibility="gone"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:layout_below="@+id/item_comment_time"/>
    <TextView
        android:id="@+id/item_comment_child2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="13dp"
        android:text="子评论2"
        android:textColor="@color/text_content"
        android:visibility="gone"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:layout_below="@+id/item_comment_child1"/>
    <TextView
        android:id="@+id/item_comment_user_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="13dp"
        android:visibility="gone"
        android:text="更多"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/item_comment_user_image"
        android:layout_below="@+id/item_comment_child2"/>
</RelativeLayout>